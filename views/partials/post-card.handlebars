<!-- https://www.creative-tim.com/twcomponents/component/post-card -->
<div class='flex bg-white shadow-lg rounded-lg'>
  <div class='flex items-start px-4 py-6'>
    <div class=''>
      <h2 class="text-xl font-semibold text-gray-900">{{title}}</h2>
      <h2
        {{!-- add {{title}} --}}
        class='text-m font-semibold text-gray-800 -mt-1'
      >{{user.username}}</h2>
      <small class='text-sm text-gray-700'>Posted on
        {{createdDate}}</small>
      <div>
        {{#each tags}}
          <div class="text-sm"><a
              href="/api/posts/byTag/{{id}}"
            >{{name}}</a></div>
        {{/each}}
      </div>
      <p class='mt-3 text-gray-700 text-sm'>
        <a href='/questions/{{id}}'>
          {{content}}
        </a>
      </p>
    </div>
  </div>
</div>