<!-- https://www.creative-tim.com/twcomponents/component/post-card -->
<div class='flex bg-white shadow-lg rounded-lg relative'>
  <div class='flex items-start px-4 py-6'>
    <div class=''>
      <h2 class="text-xl font-semibold text-gray-900">
          <a href='/questions/{{id}}'>{{title}}</a></h2>
      <h2
        {{!-- add {{title}} --}}
        class='text-m font-semibold text-gray-800 -mt-1'
      >{{user.username}}</h2>
      <small class='text-sm text-gray-700'>Posted on
        {{createdDate}}</small>
      <div class="flex gap-2">
        {{#each tags}}
          <div class="text-sm uppercase bg-neutral-700 text-neutral-50 rounded-md p-1 hover:bg-neutral-500"><a
              href="/api/posts/byTag/{{name}}"
            >{{name}}</a></div>
        {{/each}}
      </div>
      <p class='mt-3 text-gray-700 text-sm'>
          {{content}}
      </p>
    </div>
  </div>
</div>