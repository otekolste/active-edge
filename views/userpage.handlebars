<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8 flex flex-col lg:flex-row lg:gap-x-8">
    
    <!-- Section for "Ask a Question" on the left -->
    <div class="lg:w-1/3 lg:sticky top-24 text-center lg:text-left">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-6">Ready to ask something?</h2>
      <a href="/newquestion" class="rounded-md bg-indigo-600 px-6 py-3 text-lg font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600">
        Ask a Question
      </a>
    </div>

    <!-- Section for user questions on the right -->
    <div class="lg:w-2/3">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Your Questions</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">Here are the questions that you have posted</p>
      </div>

      <!-- Rendered questions grid -->
      <div class="mt-10 grid grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:grid-cols-2 xl:grid-cols-3">
        {{#each questions}}
          <article class="flex flex-col items-start justify-between">
            {{> post-card}}
          </article>
        {{/each}}
      </div>
    </div>
    
  </div>
</div>
